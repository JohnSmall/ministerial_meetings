= form_for @hospitality do |f|
  - if @hospitality.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hospitality.errors.count, "error")} prohibited this hospitality from being saved:"
      %ul
        - @hospitality.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :day
    = f.number_field :day
  .field
    = f.label :month
    = f.number_field :month
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :type_of_hospitality
    = f.text_field :type_of_hospitality
  .actions
    = f.submit 'Save'
