= form_for @meeting do |f|
  - if @meeting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meeting.errors.count, "error")} prohibited this meeting from being saved:"
      %ul
        - @meeting.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :day
    = f.number_field :day
  .field
    = f.label :month
    = f.number_field :month
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :purpose_of_meeting
    = f.text_field :purpose_of_meeting
  .actions
    = f.submit 'Save'
