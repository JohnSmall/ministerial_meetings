= form_for @organisation do |f|
  - if @organisation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@organisation.errors.count, "error")} prohibited this organisation from being saved:"
      %ul
        - @organisation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :wikipedia_entry
    = f.text_field :wikipedia_entry
  .actions
    = f.submit 'Save'
